[init]
    defaultBranch = main

[pull]
    ff = only

[mergetool "nvim-fugitive"]
    cmd = nvim -c \"Gvdiffsplit!\" \"$MERGED\"
[merge]
    # tool = nvimdiff2 # doesn't support dp (:diffput)
    tool = nvim-fugitive
    guitool = kdiff3
    conflictstyle = diff3

# git pull also updates submodules
[submodule]
    recurse = true

[url "https://github.com/"]
    insteadOf = gh:
[url "ssh://git@github.com:"]
